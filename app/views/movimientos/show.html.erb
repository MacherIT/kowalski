<% provide(:title) do %>
  Movimiento #<%= @movimiento.id %>
<% end %>

<table class="table table-bordered">
  <tbody>
    <tr>
      <th class="col-sm-2">Cuenta debito</th>
      <td><%= @movimiento.cuenta_debito.nombre %></td>
    </tr>
    <tr>
      <th class="col-sm-2">Cuenta credito</th>
      <td><%= @movimiento.cuenta_credito.nombre %></td>
    </tr>
    <tr>
      <th class="col-sm-2">Concepto</th>
      <td><%= @movimiento.concepto %></td>
    </tr>
    <tr>
      <th class="col-sm-2">Monto</th>
      <td><%= number_to_currency(@movimiento.monto) %></td>
    </tr>
    <tr>
      <th class="col-sm-2">Fecha supuesta</th>
      <td><%= @movimiento.fecha_supuesta %></td>
    </tr>
    <tr>
      <th class="col-sm-2">Fecha efectiva</th>
      <td><%= @movimiento.fecha_efectiva %></td>
    </tr>
    <tr>
      <th class="col-sm-2">Hecha</th>
      <td><%= @movimiento.hecha %></td>
    </tr>
  </tbody>
</table>

