<% provide(:title, "Lista de cuentas_gastos") %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Concepto gasto</th>
      <th>Nombre</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cuentas_gastos.each do |cuenta_gasto| %>
      <tr>
        <td><%= cuenta_gasto.concepto_gasto %></td>
        <td><%= cuenta_gasto.nombre %></td>
        <td>
          <div class="btn-group">
            <%= link_to cuenta_gasto, class: "btn btn-xs btn-default" do %>
              <%= fa_icon("eye", text: "Ver") %>
            <% end %>
            <%= link_to edit_cuenta_gasto_path(cuenta_gasto), class: "btn btn-xs btn-default" do %>
              <%= fa_icon("pencil", text: "Editar") %>
            <% end %>
            <%= link_to cuenta_gasto, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Â¿Seguro de eliminar este cuenta_gasto?" } do %>
              <%= fa_icon("trash-o", text: "Eliminar") %>
            <% end %>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_cuenta_gasto_path, class: "btn btn-default" do %>
  <%= fa_icon("plus", text: "Nuevo Cuenta gasto") %>
<% end %>
