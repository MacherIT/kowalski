<% provide(:title, "Lista de empleados") %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Cuit</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @empleados.each do |empleado| %>
      <tr>
        <td><%= empleado.nombre %></td>
        <td><%= empleado.apellido %></td>
        <td><%= empleado.cuit %></td>
        <td>
          <div class="btn-group">
            <%= link_to empleado, class: "btn btn-xs btn-default" do %>
              <%= fa_icon("eye", text: "Ver") %>
            <% end %>
            <%= link_to edit_empleado_path(empleado), class: "btn btn-xs btn-default" do %>
              <%= fa_icon("pencil", text: "Editar") %>
            <% end %>
            <%= link_to empleado, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Â¿Seguro de eliminar este empleado?" } do %>
              <%= fa_icon("trash-o", text: "Eliminar") %>
            <% end %>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_empleado_path, class: "btn btn-default" do %>
  <%= fa_icon("plus", text: "Nuevo Empleado") %>
<% end %>
