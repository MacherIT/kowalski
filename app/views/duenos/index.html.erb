<% provide(:title, "Lista de duenos") %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @duenos.each do |dueno| %>
      <tr>
        <td><%= dueno.nombre %></td>
        <td>
          <div class="btn-group">
            <%= link_to dueno, class: "btn btn-xs btn-default" do %>
              <%= fa_icon("eye", text: "Ver") %>
            <% end %>
            <%= link_to edit_dueno_path(dueno), class: "btn btn-xs btn-default" do %>
              <%= fa_icon("pencil", text: "Editar") %>
            <% end %>
            <%= link_to dueno, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Â¿Seguro de eliminar este dueno?" } do %>
              <%= fa_icon("trash-o", text: "Eliminar") %>
            <% end %>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_dueno_path, class: "btn btn-default" do %>
  <%= fa_icon("plus", text: "Nuevo Dueno") %>
<% end %>
